<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/chat_sender_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text=""
            android:textSize="16sp"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:paddingBottom="6dp"
            android:textColor="@android:color/black" android:textStyle="bold"/>

        <TextView
            android:id="@+id/chat_date_right"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingBottom="6dp"
            android:textSize="12sp"
            android:text=""
            android:layout_alignBottom="@+id/chat_sender_right"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_sender_right"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:background="@drawable/purple_bubble"
            >

            <TextView
                android:id="@+id/chat_message_right"
                android:paddingRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:text="Hello, how are you?"
                />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
